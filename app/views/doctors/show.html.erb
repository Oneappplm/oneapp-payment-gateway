<div class="container mt-5">
  <div class="row mb-3">
    <div class="col-lg-8">
      <h1>Profile of Dr. <%= @doctor.full_name %></h1>
    </div>
    <div class="col-lg-4">
      <% if @doctor.profile_picture.attached? %>
        <div class="mb-4">
          <%= image_tag @doctor.profile_picture.variant(resize_to_limit: [80, 80]), class: "rounded-circle shadow" %>
        </div>
      <% else %>
        <p><em>No profile picture uploaded.</em></p>
      <% end %>
    </div>
  </div>


  <table class="table table-striped table-bordered">
    <tr>
      <th>First Name</th>
      <td><%= @doctor.first_name || "NA" %></td>
    </tr>
    <tr>
      <th>Last Name</th>
      <td><%= @doctor.last_name || "NA" %></td>
    </tr>
    <tr>
      <th>Specialty</th>
      <td><%= @doctor.specialty || "NA" %></td>
    </tr>
    <tr>
      <th>License Number</th>
      <td><%= @doctor.license_number || "NA" %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @doctor.user.email || "NA" %></td>
    </tr>
    <tr>
      <th>Phone</th>
      <td><%= @doctor.phone || "NA" %></td>
    </tr>
    <tr>
      <th>Clinic Name</th>
      <td><%= @doctor.clinic_name || "NA" %></td>
    </tr>
    <tr>
      <th>Clinic Address</th>
      <td><%= @doctor.clinic_address || "NA" %></td>
    </tr>
    <tr>
      <th>Location</th>
      <td><%= @doctor.location || "NA" %></td>
    </tr>
  </table>
  <%= link_to 'Edit Profile', edit_doctor_path(@doctor), class: "btn btn-primary" %>
  <%= link_to '<- Back', root_path, class: "btn btn-outline-secondary" %>
</div>
