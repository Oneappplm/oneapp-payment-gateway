<div class="container mt-3">
	<h2>Patients</h2>
	<%= link_to "Add New Patient", new_doctor_patient_path, class: "btn btn-primary mb-3" %>
	<% if @patients.present? %>
		<table class="table table-striped table-bordered">
		  <thead>
		    <tr>
		      <th>Name</th>
		      <th>DOB</th>
		      <th>Status</th>
		      <th>Actions</th>
		    </tr>
		  </thead>
		  <tbody>
		    <% @patients.each do |patient| %>
		      <tr>
		        <td><%= patient.full_name %></td>
		        <td><%= patient.dob %></td>
		        <td><%= patient.status.titleize rescue 'N/A' %></td>
		        <td>
		        	<%= link_to doctor_patient_path(@doctor, patient), 
		        			class: "btn btn-sm btn-primary" do %>
	        				<i class="bi bi-eye"></i> View
							<% end %>
		        </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	<% else %>
		<p class="fs-4 text-center bg-warning p-2 fw-bold text-dark">No patients found.</p>
	<% end %>
</div>